{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/category_tree.js') }}"></script>
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('css/category_tree.css') }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}
{% block body %}
    <!--start-breadcrumbs-->
    <div class="breadcrumbs">
        <div class="container">
            <div class="breadcrumbs-main">
                <ol class="breadcrumb">
                    <li><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="active">Catalog</li>
                </ol>
            </div>
        </div>
    </div>
    <!--end-breadcrumbs-->
    <!--prdt-starts-->
    <div class="prdt">
        <div class="container">
            <div class="prdt-top">
                <div class="col-md-9 prdt-left">
                    <div class="product-one">
                    {% for product in pagination %}
                        <div class="col-md-4 product-left p-left">
                            <div class="product-main simpleCart_shelfItem">
                                <a href="#" class="mask"><img class="img-responsive zoom-img" src="{{ asset(product.image) }}" alt="" /></a>
                                <div class="product-bottom">
                                    <h3>{{ product.category }}</h3>
                                    <p>{{ product.name }}</p>
                                    <h4><a class="item_add" href="#"><i></i></a> <span class=" item_price">$ {{ product.price }}9</span></h4>
                                </div>
                                <div class="srch srch1">
                                    <span>-50%</span>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="col-md-3 prdt-right">
                    <div class="w_sidebar">
                        <section  class="sky-form">
                            <h4>Categories</h4>
                            <div class="row1 scroll-pane">
                                <div class="col col-4">
                                    {% macro recursiveCategory(category) %}
                                        <li>
                                            <a href="{{ path('category_show', { 'id': category.id }) }}">{{ category }}</a>

                                            {% if category.children|length %}
                                                <ul>
                                                    {% for child in category.children %}
                                                        {{ _self.recursiveCategory(child) }}
                                                    {% endfor %}
                                                </ul>
                                            {% endif %}
                                        </li>
                                    {% endmacro %}

                                    {% if categories %}
                                            <ul id="tree">
                                                {% for category in categories %}
                                                    {% if category.parent == false %}
                                                        {{ _self.recursiveCategory(category) }}
                                                    {% endif %}
                                                {% endfor %}
                                            </ul>
                                    {% endif %}
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="clearfix"></div>
                <script type="text/javascript">
                    $('#tree').treed({openedClass:'glyphicon-chevron-right', closedClass:'glyphicon-chevron-down'});
                </script>
                <div class="pagenatin">
                    <div class="col-md-6">
                        <nav>
                            {{ knp_pagination_render(pagination) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--product-end-->

{% endblock %}