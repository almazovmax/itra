{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/bootstrap-treeview.js') }}"></script>
{% endblock %}

{% block stylesheet %}
    {{ parent() }}
    <link href="{{ asset('') }}" rel="stylesheet" type="text/css" media="all" />
{% endblock %}


{% block body %}
    <div class="product">
        <div class="container">
            <div class="account-top heading">
                <h2>Categories list</h2>
            </div>
            <div class="account-main">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Parent</th>
                            <th>Is Active</th>
                            <th class="col-xs-6">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for category in categories %}
                        <tr>
                            <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                            <td>{{ category.name }}</td>
                            <td>{% if category.parent %}<a href="{{ path('category_show', { 'id': category.parent.id }) }}">{{ category.parent.name }}</a>{% endif %}</td>
                            <td>{% if category.isActive %}Yes{% else %}No{% endif %}</td>
                            <td>
                                <a href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                                <a href="{{ path('category_edit', { 'id': category.id }) }}">edit</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <ul>
                    <li>
                        <a class="btn btn-info" href="{{ path('category_new') }}">Create a new category</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
