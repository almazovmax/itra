{% extends 'base.html.twig' %}

{% block body %}
    <div class="account">
        <div class="container">
            <div class="account-top heading">
                <h2>Category</h2>
                </div>
            <div class="account-main">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ category.name }}</td>
                        </tr>
                        <tr>
                            <th>Is Active</th>
                            <td>{% if category.isActive %}Yes{% else %}No{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="address col-md-6 footer-left">
                    <a href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
                    <a href="{{ path('category_index') }}">Back to the list</a>
                </div>
                    <div class="address col-md-6 footer-right">
                        {{ form_start(delete_form) }}
                            <input type="submit" value="Delete">
                        {{ form_end(delete_form) }}
                    </div>

            </div>
        </div>
    </div>
{% endblock %}
