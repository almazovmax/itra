{% extends 'base.html.twig' %}

{% block body %}
    <!--start-breadcrumbs-->
    <div class="breadcrumbs">
        <div class="container">
            <div class="breadcrumbs-main">
                <ol class="breadcrumb">
                    <li><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="active">{{ category.name }}</li>
                </ol>
            </div>
        </div>
    </div>
    <!--end-breadcrumbs-->
    <div class="account">
        <div class="container">
            <div class="account-top heading">
                <h2>Category</h2>
            </div>
            <div class="account-main col-md-9">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ category.name }}</td>
                        </tr>
                        <tr>
                            <th>Parent</th>
                            <td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.parent }}</a></td>
                        </tr>
                        <tr>
                            <th>Is Active</th>
                            <td>{% if category.isActive %}Yes{% else %}No{% endif %}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3 single-right">
                <div class="w_sidebar">
                    <section  class="sky-form">
                        <h4>Action</h4>
                        <div class="row1 row2 scroll-pane">
                            <div class="col col-4">
                                <label>
                                    <a class="btn btn-warning" href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
                                </label>
                                <hr>
                                <label>
                                    <a class="btn btn-info" href="{{ path('category_index') }}">Back to the list</a>
                                </label>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
{% endblock %}
