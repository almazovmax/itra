{% extends 'base.html.twig' %}

{% block body %}
    <!--start-breadcrumbs-->
    <div class="breadcrumbs">
        <div class="container">
            <div class="breadcrumbs-main">
                <ol class="breadcrumb">
                    <li><a href="{{ path('homepage') }}">Home</a></li>
                    <li class="active">{{ category.name }} - Edit</li>
                </ol>
            </div>
        </div>
    </div>
    <!--end-breadcrumbs-->
    <div class="account">
        <div class="container">
            <div class="account-top heading">
                <h2>Category edit</h2>
            </div>
            <div class="account-main">
                <div class="col-md-9 account-left">
                    <h3>Edit category</h3>
                    <div class="account-bottom">
                        {{ form_start(edit_form, {
                            'attr': {
                                'class': 'form-signin',
                            }
                        }) }}
                        <div class="form-group">
                            {{ form_row(edit_form.name, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Name'
                                },
                            }) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(edit_form.parent, {
                                'attr': {
                                    'class': 'form-control',
                                }
                            }) }}
                        </div>

                        <div class="form-group">
                            {{ form_row(edit_form.isActive, {
                                'attr': {
                                    'class': 'checkbox',
                                }
                            }) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-3 single-right">
                    <div class="w_sidebar">
                        <section  class="sky-form">
                            <h4>Action</h4>
                            <div class="row1 row2 scroll-pane">
                                <div class="col col-4">
                                    <label>
                                        <input class="btn btn-warning" type="submit" value="Edit" />
                                        {{ form_end(edit_form) }}
                                    </label>
                                    <hr>
                                    <label>
                                        {{ form_start(delete_form) }}
                                        <input class="btn btn-danger" type="submit" value="Delete">
                                        {{ form_end(delete_form) }}
                                    </label>
                                    <hr>
                                    <label>
                                        <a class="btn btn-success" href="{{ path('category_new') }}">Create a new</a>
                                    </label>
                                    <hr>
                                    <label>
                                        <a class="btn btn-info" href="{{ path('category_index') }}">Back to the list</a>
                                    </label>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
    </div>
{% endblock %}
