<!DOCTYPE html>
<html>
<head>
    <title>COURSE WORK ITRANSITION | {% block title %}{% endblock %}</title>
    {% block stylesheet %}
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link href="{{ asset('css/memenu.css') }}" rel="stylesheet" type="text/css" media="all" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    {% endblock %}

    {% block javascripts %}
        {#<script src="{{ asset('js/jquery-1.11.0.min.js') }}"></script>#}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
        <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
        <script src="{{ asset('js/jquery.easydropdown.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    {% endblock %}
</head>
<body>

<!--start-logo-->
<div class="logo">
    <a href="{{ path('homepage') }}"><h1>COURSE WORK ITRANSITION</h1></a>
</div>
<!--start-logo-->
<!--bottom-header-->
<div class="header-bottom">
    <div class="container">
        <div class="header">
            <div class="col-md-9 header-left">
                <div class="top-nav">
                    {% if is_granted('ROLE_ADMIN') %}
                        {{ knp_menu_render('admin', {'currentClass': 'active'}) }}
                    {% elseif is_granted('ROLE_MODERATOR') %}
                        {{ knp_menu_render('moderator', {'currentClass': 'active'}) }}
                    {% elseif is_granted('ROLE_USER') %}
                        {{ knp_menu_render('user', {'currentClass': 'active'}) }}
                    {% elseif is_granted('IS_AUTHENTICATED_ANONYMOUSLY') %}
                        {{ knp_menu_render('guest', {'currentClass': 'active'}) }}
                    {% endif %}
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="col-md-3 header-right">
            </div>
            <div class="clearfix"> </div>
        </div>
    </div>
</div>
<!--bottom-header-->

{% block body %}{% endblock %}

<!--footer-starts-->
<div class="footer">
    <div class="container">
        <div class="footer-top">
            <div class="col-md-6 footer-left">
                {% if is_granted('ROLE_USER') %}
                    <a class="btn btn-info" href="{{ path('logout') }}">Logout</a>
                {% endif %}
            </div>
            <div class="col-md-6 footer-right">
                <p>Â© 2016 ITRA. We have no rights | Design by  <a href="http://vk.com/almazovmax" target="_blank">Max</a> & <a href="https://vk.com/call_me_greg" target="_blank">Greg</a></p>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<!--footer-end-->
</body>
</html>