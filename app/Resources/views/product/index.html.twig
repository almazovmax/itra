{% extends 'base.html.twig' %}

{% block body %}

<!--start-breadcrumbs-->
<div class="breadcrumbs">
    <div class="container">
        <div class="breadcrumbs-main">
            <ol class="breadcrumb">
                <li><a href="">Home</a></li>
                <li class="active">List of products</li>
            </ol>
        </div>
    </div>
</div>
<!--end-breadcrumbs-->
<!--prdt-starts-->
<div class="product">
    <div class="container">
        <div class="account-top heading">
            <h2>Product list</h2>
        </div>
        <div class="account-main">
            <div class="col-md-3">
                <a class="btn btn-info" href="{{ path('product_new') }}">Create a new product</a>
            </div>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Datecreate</th>
                        <th>Dateupdate</th>
                        <th>Isactiv</th>
                        <th>Sku</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for product in pagination %}
                    <tr>
                        <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.description }}</td>
                        <td>{{ product.price }} $</td>
                        <td>{{ product.dateCreate.date|date("d M Y") }}</td>
                        <td>{% if product.dateUpdate %}{{ product.dateUpdate.date|date("d M Y") }}{% endif %}</td>
                        <td>{% if product.isActive %}Yes{% else %}No{% endif %}</td>
                        <td>{{ product.sku }}</td>
                        <td>
                            <a href="{{ path('product_show', { 'id': product.id }) }}"><span class="glyphicon glyphicon-expand"></span></a>
                            <a href="{{ path('product_edit', { 'id': product.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <div class="pagenatin">
                <nav>
                    {{ knp_pagination_render(pagination) }}
                </nav>
            </div>
        </div>
    </div>
</div>
{% endblock %}
